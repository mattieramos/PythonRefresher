def emoji_converter(message):
    words = message.split(' ')  # uses as a boundary to separate string into mulitple words and return it into a list
    emojis = {
        ":)": "ðŸ™‚",
        ":(": "ðŸ™"
    }
    output = ""
    for word in words:
        output += emojis.get(word, word) + " "
        return output


message = input(">")
print(emoji_converter(message))
